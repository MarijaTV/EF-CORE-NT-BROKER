@model EF_CORE_NT_BROKER.Dtos.ApartmentIndex


<h1>Add new Apartment</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllApartments[0].ApartmentName)
            <th>
                @Html.DisplayNameFor(model => model.AllApartments[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllApartments[0].Broker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllApartments)
        {
            <tr>

                <td>@item.ApartmentName</td>

                <td>@item.Company.CompanyName</td>

                <td>@item.Broker.FullName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { @*id = item.Id*@}) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
